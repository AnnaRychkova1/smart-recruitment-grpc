  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/">Smart Recruitment</a></li>
          <li><a href="/signin">Sign In</a></li>
          <li><a class="active" href="/signup">Sign Up</a></li>
        </ul>
      </nav>
      <hr />
    </header>
    <main>
      <h1>Sign Up</h1>
      <form method="POST" id="signup-form" action="/signup">
        <label>Name:</label>
        <input id="signup-name" type="text" name="name" required /><br />
        <label>Email:</label>
        <input id="signup-email" type="email" name="email" required /><br />
        <label>Password:</label>
        <input
          id="signup-password"
          type="password"
          name="password"
          required
        /><br />
        <button type="submit">Register</button>
      </form>
      <div id="error-message" style="color: red; display: none"></div>
    </main>
